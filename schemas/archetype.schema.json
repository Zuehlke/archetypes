{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Zuehlke/archetypes/schemas/archetype.schema.json",
  "title": "Archetype Frontmatter Schema",
  "description": "JSON Schema for validating archetype YAML frontmatter",
  "type": "object",
  
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Display name of the archetype"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Overview explaining the archetype's purpose and scope"
    },
    "required_tags": {
      "type": "object",
      "properties": {
        "archetypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      },
      "required": ["archetypes"],
      "additionalProperties": false
    },
    "skill_stages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "common.schema.json#/definitions/skill_stage_name"
          },
          "topics": {
            "type": "array",
            "items": {
              "$ref": "common.schema.json#/definitions/topic_slug"
            },
            "uniqueItems": true,
            "description": "Array of topic slugs to master at this stage"
          }
        },
        "required": ["name", "topics"],
        "additionalProperties": false
      },
      "description": "Progression through Dreyfus model skill stages"
    }
  },
  
  "required": ["title", "description"],
  "additionalProperties": true,
  
  "examples": [
    {
      "title": "Core Software Engineer",
      "description": "A software engineer who can work across the full stack to deliver business value through technology.",
      "skill_stages": [
        {
          "name": "Novice",
          "topics": [
            "version-control-systems",
            "html-css-basics"
          ]
        },
        {
          "name": "Advanced Beginner", 
          "topics": [
            "test-driven-development",
            "pair-programming"
          ]
        }
      ]
    }
  ]
}